<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalogView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.example.iithplacement.CatalogActivity"
    tools:showIn="@layout/app_bar_catalog">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <View
        android:id="@+id/mainRelativeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mainRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/logoImage"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/iith_logo" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/textIIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoImage"
                android:layout_marginTop="25dp">

                <TextView

                    android:id="@+id/bodyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRAINING AND PLACEMENT CELL \n IIT HYDERABAD"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/director_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textIIT"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/magnitude_director"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/director_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ub_desai" />

                <TextView
                    android:id="@+id/director_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/director_image"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="U. B. Desai"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/director_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/director_name"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Director IIT HYDERABAD"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/director_designation"
                    android:layout_marginTop="25dp"
                    android:text="@string/description_director"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/director_tab"
                android:layout_marginTop="25dp"
                android:background="@android:color/black"
                android:gravity="center"
                android:text="COPYRIGHT Â© Indian Institute Of Technology, Hyderabad - 2017 "
                android:textColor="@android:color/white" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
